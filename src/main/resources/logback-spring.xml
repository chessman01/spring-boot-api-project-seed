<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <!--<contextName>logback</contextName>-->

    <!-- 测试环境+开发环境. 多个使用逗号隔开. -->
    <springProfile name="dev">
        <property name="log.path" value="/Users/yangqi/tianbao/logs/" />
    </springProfile>
    <!-- 生产环境. -->
    <springProfile name="test,pro">
        <property name="log.path" value="/home/admin/tianbao/logs/" />
    </springProfile>

    <!--输出到控制台-->
    <appender name="tomcat" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
             <level>INFO</level>
         </filter>
        <file>${log.path}tomcat.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>tomcat.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--输出到文件-->
    <appender name="yen" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}yen.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>yen.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 测试环境+开发环境. 多个使用逗号隔开. -->
    <springProfile name="test,dev">
        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
        <root level="info">
            <appender-ref ref="tomcat" />
            <appender-ref ref="console" />
        </root>
        <logger name="com.tianbao" level="debug" additivity="false">
            <appender-ref ref="yen"/>
        </logger>
    </springProfile>

    <!-- 生产环境. -->
    <springProfile name="pro">
        <root level="info">
            <appender-ref ref="tomcat" />
        </root>
        <logger name="com.tianbao" level="ERROR" additivity="false">
            <appender-ref ref="yen"/>
        </logger>
    </springProfile>
</configuration>